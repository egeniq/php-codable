{
    "name": "minvws/codable",
    "description": "Encode/decode objects to/from various formats",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Verhage",
            "email": "peter@egeniq.com",
            "homepage": "https://github.com/petercv"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2.2",
        "phpstan/phpstan": "^1.10.20",
        "squizlabs/php_codesniffer": "^3.7.2",
        "fakerphp/faker": "^v1.23.0"
    },
    "autoload": {
        "psr-4": {
            "MinVWS\\Codable\\": "src/MinVWS/Codable/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MinVWS\\Tests\\Codable\\": "tests/"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyze -c phpstan.neon.dist",
        "phpcs": "vendor/bin/phpcs"
    }
}
